<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="8dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/policy_adapter_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/policy_adapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POLICY NAME"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/policy_adapter_description"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/policy_adapter_name"
                    android:maxLines="10"
                    android:text="Description of Policy"
                    android:textSize="12dp"
                    android:textStyle="italic" />

            </LinearLayout>

            <Button
                android:id="@+id/policy_adapter_change_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="INSPECT"></Button>

            <LinearLayout
                android:id="@+id/policy_adapter_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/policy_adapter_names"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SIZE: "
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/policy_adapter_size"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XX"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TIME: "
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/policy_adapter_time"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XX"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="COST: $"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/policy_adapter_cost"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="XX"
                        android:textSize="12dp"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>