<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="geopolitique.id11699156.com.geopolitique.CreateExistingNationActivity"
    tools:showIn="@layout/activity_create_existing_nation">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/create_existing_nation_activity_choose_existing_layout"
        android:layout_centerInParent="true"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_existing_nation_activity_choose_text"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/create_existing_nation_activity_choose_existing_spinner"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"></Spinner>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/create_existing_nation_activity_choose_existing_image"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_existing_nation_activity_leader_text"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Leader:"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_existing_nation_activity_choose_existing_text"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <Button
        android:id="@+id/create_existing_nation_activity_create_nation_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onCreateNationClick"
        android:text="CREATE NATION" />
</RelativeLayout>
