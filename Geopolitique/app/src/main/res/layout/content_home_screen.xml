    tools:context="geopolitique.id11699156.com.geopolitique.HomeScreenActivity"
    tools:showIn="@layout/activity_home_screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="The time is" />


        <TextView
            android:id="@+id/home_screen_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/home_screen_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Welcome," />

        <TextView
            android:id="@+id/home_screen_leader_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Prime Minister Chambers"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TEMP_OUTPUT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_screen_leader_text" />

    </LinearLayout>


