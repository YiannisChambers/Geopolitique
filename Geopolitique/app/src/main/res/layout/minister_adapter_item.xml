<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/minister_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINISTER NAME"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minister_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/minister_adapter_name"
                android:text="Title"
                android:textSize="12dp"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/minister_adapter_change_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="CHANGE"></Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/minister_adapter_change_button"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:id="@+id/minister_adapter_stats">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="KNOWL: "
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/minister_adapter_knowledge"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="EXP: "
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/minister_adapter_experience"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="WORK: "
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/minister_adapter_workload"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="12dp"
                    android:textStyle="italic"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>